<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Process Map Tree View -->
    <record id="view_process_map_list" model="ir.ui.view">
        <field name="name">process.map.list</field>
        <field name="model">process.map</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="org_id"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-warning="state == 'review'"
                       decoration-success="state == 'approved'"/>
                <field name="version"/>
            </list>
        </field>
    </record>

    <!-- Process Map Form View -->
    <record id="view_process_map_form" model="ir.ui.view">
        <field name="name">process.map.form</field>
        <field name="model">process.map</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_open_canvas" type="object"
                            string="Open Canvas Editor" class="btn-primary"
                            icon="fa-pencil-square-o"/>
                    <button name="action_set_review" type="object"
                            string="Set to Review"
                            invisible="state != 'draft'"
                            class="btn-primary"/>
                    <button name="action_approve" type="object"
                            string="Approve"
                            invisible="state != 'review'"
                            class="btn-primary"
                            groups="process_mapper.group_process_mapper_manager"/>
                    <button name="action_reset_to_draft" type="object"
                            string="Reset to Draft"
                            invisible="state == 'draft'"
                            confirm="Reset this process map to draft?"/>
                    <button name="action_generate_prompt" type="object"
                            string="Generate Prompt"
                            invisible="state != 'approved'"
                            class="btn-secondary"
                            groups="process_mapper.group_process_mapper_manager"
                            icon="fa-magic"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,review,approved"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Process Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="org_id"/>
                            <field name="version"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Lanes" name="lanes">
                            <field name="lane_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="color" widget="color"/>
                                    <field name="org_id"/>
                                    <field name="role_id"/>
                                    <field name="y_position"/>
                                    <field name="height"/>
                                </list>
                            </field>
                        </page>
                        <page string="Steps" name="steps">
                            <field name="step_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="step_type"/>
                                    <field name="lane_id"/>
                                    <field name="role_id"/>
                                    <field name="responsible"/>
                                    <field name="system_action"/>
                                    <field name="x_position"/>
                                    <field name="y_position"/>
                                </list>
                            </field>
                        </page>
                        <page string="Connections" name="connections">
                            <field name="connection_ids">
                                <list editable="bottom">
                                    <field name="source_step_id"/>
                                    <field name="target_step_id"/>
                                    <field name="label"/>
                                    <field name="connection_type"/>
                                </list>
                            </field>
                        </page>
                        <page string="Generated Prompt" name="prompt"
                              invisible="not generated_prompt">
                            <field name="generated_prompt" widget="text" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_process_map_list" model="ir.actions.act_window">
        <field name="name">Process Maps</field>
        <field name="res_model">process.map</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
