<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

<!--        <record id="module_category_school" model="ir.module.category">-->
        <record id="module_category_myschool" model="res.groups.privilege">
            <field name="name">MySchool Core Management</field>
            <field name="description">User access level for school management</field>
            <field name="sequence">10</field>
        </record>

        <record id="group_myschool_user" model="res.groups">
            <field name="name">MySchool User</field>
            <field name="privilege_id" ref="module_category_myschool"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_myschool_manager" model="res.groups">
            <field name="name">MySchool Manager</field>
            <field name="privilege_id" ref="module_category_myschool"/>
            <field name="implied_ids" eval="[(4, ref('group_myschool_user'))]"/>
        </record>


    </data>
</odoo>