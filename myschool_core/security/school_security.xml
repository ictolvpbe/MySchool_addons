<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="module_category_school" model="ir.module.category">
            <field name="name">School Management</field>
            <field name="description">User access level for school management</field>
            <field name="sequence">10</field>
        </record>

        <record id="group_school_user" model="res.groups">
            <field name="name">School User</field>
            <field name="privilege_id" ref="module_category_school"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_school_manager" model="res.groups">
            <field name="name">School Manager</field>
            <field name="privilege_id" ref="module_category_school"/>
            <field name="implied_ids" eval="[(4, ref('group_school_user'))]"/>
        </record>

    </data>
</odoo>