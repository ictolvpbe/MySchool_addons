<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_sys_event_list" model="ir.ui.view">
        <field name="name">myschool.sys.event.list</field>
        <field name="model">myschool.sys.event</field>
        <field name="arch" type="xml">
            <list string="System Events" decoration-danger="status == 'PRO_ERROR'" decoration-success="status == 'CLOSED'" decoration-info="status == 'PROCESS'">
                <field name="name"/>
                <field name="syseventtype_id"/>
                <field name="eventcode"/>
                <field name="source"/>
                <field name="priority" widget="priority"/>
                <field name="status" widget="badge" decoration-success="status == 'CLOSED'" decoration-info="status == 'PROCESS'" decoration-warning="status == 'PRO_ERROR'" decoration-muted="status == 'NEW'"/>
                <field name="user_id" widget="many2one_avatar_user"/>
                <field name="create_date"/>
                <field name="eventclosed" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_sys_event_form" model="ir.ui.view">
        <field name="name">myschool.sys.event.form</field>
        <field name="model">myschool.sys.event</field>
        <field name="arch" type="xml">
            <form string="System Event">
                <header>
                    <button name="action_set_processing" string="Start Processing" type="object" 
                            class="oe_highlight" invisible="status != 'NEW'"/>
                    <button name="action_set_error" string="Mark as Error" type="object" 
                            class="btn-warning" invisible="status not in ['NEW', 'PROCESS']"/>
                    <button name="action_set_closed" string="Close Event" type="object" 
                            class="oe_highlight" invisible="status == 'CLOSED'"/>
                    <button name="action_reopen" string="Reopen" type="object" 
                            invisible="status != 'CLOSED'"/>
                    <field name="status" widget="statusbar" statusbar_visible="NEW,PROCESS,CLOSED"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- Add custom buttons here if needed -->
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="syseventtype_id" options="{'no_create': True}"/>
                            <field name="source"/>
                            <field name="eventcode"/>
                            <field name="priority" widget="priority"/>
                        </group>
                        <group>
                            <field name="user_id" widget="many2one_avatar_user"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="create_date" string="Created On"/>
                            <field name="eventclosed" readonly="1"/>
                            <field name="duration_days" invisible="not eventclosed"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Event Data">
                            <field name="data" placeholder="Enter detailed event data here..." widget="text"/>
                        </page>
                        <page string="Additional Information">
                            <group>
                                <group>
                                    <field name="priority_label"/>
                                    <field name="is_closed"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
<!--                <div class="oe_chatter">-->
<!--                    <field name="message_follower_ids"/>-->
<!--                    <field name="activity_ids"/>-->
<!--                    <field name="message_ids"/>-->
<!--                </div>-->
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_sys_event_kanban" model="ir.ui.view">
        <field name="name">myschool.sys.event.kanban</field>
        <field name="model">myschool.sys.event</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="status">
                <field name="name"/>
                <field name="syseventtype_id"/>
                <field name="source"/>
                <field name="priority"/>
                <field name="status"/>
                <field name="eventcode"/>
                <field name="create_date"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <span class="float-end">
                                    <field name="priority" widget="priority"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="syseventtype_id"/>
                                <br/>
                                <span class="badge text-bg-secondary"><field name="source"/></span>
                                <span t-if="record.eventcode.raw_value"> - <field name="eventcode"/></span>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="create_date" widget="date"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="user_id" widget="many2one_avatar_user"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_sys_event_search" model="ir.ui.view">
        <field name="name">myschool.sys.event.search</field>
        <field name="model">myschool.sys.event</field>
        <field name="arch" type="xml">
            <search string="Search Events">
                <field name="name"/>
                <field name="syseventtype_id"/>
                <field name="eventcode"/>
                <field name="source"/>
                <field name="user_id"/>
                <separator/>
                <filter string="New" name="new" domain="[('status', '=', 'NEW')]"/>
                <filter string="Processing" name="processing" domain="[('status', '=', 'PROCESS')]"/>
                <filter string="Errors" name="errors" domain="[('status', '=', 'PRO_ERROR')]"/>
                <filter string="Closed" name="closed" domain="[('status', '=', 'CLOSED')]"/>
                <separator/>
                <filter string="High Priority" name="high_priority" domain="[('priority', '=', '1')]"/>
                <filter string="Normal Priority" name="normal_priority" domain="[('priority', '=', '2')]"/>
                <filter string="Low Priority" name="low_priority" domain="[('priority', '=', '3')]"/>
                <separator/>
                <filter string="Backend" name="backend" domain="[('source', '=', 'BE')]"/>
                <filter string="AD Sync" name="adsync" domain="[('source', '=', 'ADSYNC')]"/>
                <separator/>
                <filter string="My Events" name="my_events" domain="[('user_id', '=', uid)]"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Created Today" name="today" domain="[('create_date', '&gt;=', datetime.datetime.now().strftime('%Y-%m-%d 00:00:00'))]"/>
                <filter string="Created This Week" name="week" domain="[('create_date', '&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <filter string="Created This Month" name="month" domain="[('create_date', '&gt;=', (context_today().replace(day=1)).strftime('%Y-%m-%d'))]"/>
<!--                <group expand="0" string="Group By">-->
<!--                    <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>-->
<!--&lt;!&ndash;                    <filter string="Event Type" name="group_type" context="{'group_by': 'syseventtype_id'}"/>&ndash;&gt;-->
<!--                    <filter string="Source" name="group_source" context="{'group_by': 'source'}"/>-->
<!--                    <filter string="Priority" name="group_priority" context="{'group_by': 'priority'}"/>-->
<!--&lt;!&ndash;                    <filter string="Responsible User" name="group_user" context="{'group_by': 'user_id'}"/>&ndash;&gt;-->
<!--                    <filter string="Creation Date" name="group_create_date" context="{'group_by': 'create_date'}"/>-->
<!--                </group>-->
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_sys_event_all" model="ir.actions.act_window">
        <field name="name">System Events</field>
        <field name="res_model">myschool.sys.event</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No system events found
            </p>
            <p>
                System events will be created automatically by the system or manually by users.
            </p>
        </field>
    </record>

    <record id="action_sys_event_new" model="ir.actions.act_window">
        <field name="name">New Events</field>
        <field name="res_model">myschool.sys.event</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{'search_default_new': 1, 'search_default_active': 1}</field>
        <field name="domain">[('status', '=', 'NEW')]</field>
    </record>

    <record id="action_sys_event_errors" model="ir.actions.act_window">
        <field name="name">Event Errors</field>
        <field name="res_model">myschool.sys.event</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{'search_default_errors': 1, 'search_default_active': 1}</field>
        <field name="domain">[('status', '=', 'PRO_ERROR')]</field>
    </record>
</odoo>
