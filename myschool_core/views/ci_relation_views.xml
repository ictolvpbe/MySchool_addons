<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_ci_relation_list" model="ir.ui.view">
            <field name="name">myschool.ci.relation.list</field>
            <field name="model">myschool.ci.relation</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="id_ci"/>
                    <field name="id_role"/>
                    <field name="id_org"/>
                    <field name="id_person"/>
                    <field name="id_period"/>
                    <field name="isactive"/>
                </list>
            </field>
        </record>

        <record id="view_ci_relation_form" model="ir.ui.view">
            <field name="name">myschool.ci.relation.form</field>
            <field name="model">myschool.ci.relation</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="isactive"/>
                        </group>

                        <group string="Relation Details" col="2">
                            <field name="id_ci"/>
                            <field name="id_role"/>
                            <field name="id_org"/>
                            <field name="id_person"/>
                            <field name="id_period"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_ci_relation" model="ir.actions.act_window">
            <field name="name">CI Relations</field>
            <field name="res_model">myschool.ci.relation</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>