<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Role Type Tree View -->
    <record id="view_school_role_type_tree" model="ir.ui.view">
        <field name="name">school.role.type.tree</field>
        <field name="model">school.role.type</field>
        <field name="arch" type="xml">
            <tree string="Rol Types">
                <field name="name"/>
                <field name="short_name"/>
                <field name="is_active"/>
            </tree>
        </field>
    </record>

    <!-- Role Type Form View -->
    <record id="view_school_role_type_form" model="ir.ui.view">
        <field name="name">school.role.type.form</field>
        <field name="model">school.role.type</field>
        <field name="arch" type="xml">
            <form string="Rol Type">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="short_name"/>
                        <field name="is_active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Role Type Action -->
    <record id="action_school_role_type" model="ir.actions.act_window">
        <field name="name">Rol Types</field>
        <field name="res_model">school.role.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Maak een nieuw rol type aan
            </p>
        </field>
    </record>
</odoo>