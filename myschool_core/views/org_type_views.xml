<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Organization Type Tree View -->
    <record id="view_school_org_type_tree" model="ir.ui.view">
        <field name="name">school.org.type.tree</field>
        <field name="model">school.org.type</field>
        <field name="arch" type="xml">
            <tree string="Organisatie Types">
                <field name="name"/>
                <field name="description"/>
                <field name="is_active"/>
            </tree>
        </field>
    </record>

    <!-- Organization Type Form View -->
    <record id="view_school_org_type_form" model="ir.ui.view">
        <field name="name">school.org.type.form</field>
        <field name="model">school.org.type</field>
        <field name="arch" type="xml">
            <form string="Organisatie Type">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="is_active"/>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Organization Type Action -->
    <record id="action_school_org_type" model="ir.actions.act_window">
        <field name="name">Organisatie Types</field>
        <field name="res_model">school.org.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Maak een nieuw organisatie type aan
            </p>
        </field>
    </record>
</odoo>