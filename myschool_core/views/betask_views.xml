<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ========================================= -->
    <!-- BETASK TYPE VIEWS -->
    <!-- ========================================= -->

    <!-- List View -->
    <record id="view_betask_type_list" model="ir.ui.view">
        <field name="name">myschool.betask.type.list</field>
        <field name="model">myschool.betask.type</field>
        <field name="arch" type="xml">
            <list string="Task Types">
                <field name="name"/>
                <field name="target"/>
                <field name="object"/>
                <field name="action"/>
                <field name="task_ids" string="Tasks Count" widget="badge"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_betask_type_form" model="ir.ui.view">
        <field name="name">myschool.betask.type.form</field>
        <field name="model">myschool.betask.type</field>
        <field name="arch" type="xml">
            <form string="Task Type">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="target"/>
                        </group>
                        <group>
                            <field name="object"/>
                            <field name="action"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Related Tasks">
                            <field name="task_ids">
                                <list>
                                    <field name="status" widget="badge" decoration-success="status == 'completed_ok'" decoration-danger="status == 'error'" decoration-warning="status == 'processing'" decoration-info="status == 'new'"/>
                                    <field name="automatic_sync"/>
                                    <field name="lastrun"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_betask_type_search" model="ir.ui.view">
        <field name="name">myschool.betask.type.search</field>
        <field name="model">myschool.betask.type</field>
        <field name="arch" type="xml">
            <search string="Task Types">
                <field name="name"/>
                <field name="target"/>
                <field name="object"/>
                <field name="action"/>
<!--                <group expand="0" string="Group By">-->
<!--                    <filter string="Target" name="group_target" context="{'group_by': 'target'}"/>-->
<!--                    <filter string="Object" name="group_object" context="{'group_by': 'object'}"/>-->
<!--                    <filter string="Action" name="group_action" context="{'group_by': 'action'}"/>-->
<!--                </group>-->
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_betask_type" model="ir.actions.act_window">
        <field name="name">Task Types</field>
        <field name="res_model">myschool.betask.type</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Task Type
            </p>
            <p>
                Define task types to categorize and manage different types of synchronization tasks.
            </p>
        </field>
    </record>

    <!-- ========================================= -->
    <!-- BETASK TASK VIEWS -->
    <!-- ========================================= -->

    <!-- List View -->
    <record id="view_betask_task_list" model="ir.ui.view">
        <field name="name">myschool.betask.task.list</field>
        <field name="model">myschool.betask.task</field>
        <field name="arch" type="xml">
            <list string="Tasks" decoration-success="status == 'completed_ok'" decoration-danger="status == 'error'" decoration-warning="status == 'processing'" decoration-muted="status == 'new'">
                <field name="betasktype_id"/>
                <field name="status" widget="badge" decoration-success="status == 'completed_ok'" decoration-danger="status == 'error'" decoration-warning="status == 'processing'" decoration-info="status == 'new'"/>
                <field name="automatic_sync" widget="boolean_toggle"/>
                <field name="lastrun"/>
                <field name="error_description"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_betask_task_form" model="ir.ui.view">
        <field name="name">myschool.betask.task.form</field>
        <field name="model">myschool.betask.task</field>
        <field name="arch" type="xml">
            <form string="Task">
                <header>
                    <button name="action_set_processing" string="Set Processing" type="object" class="oe_highlight" invisible="status != 'new'"/>
                    <button name="action_set_completed" string="Mark Completed" type="object" class="oe_highlight" invisible="status not in ['new', 'processing']"/>
                    <button name="action_set_error" string="Mark Error" type="object" invisible="status not in ['new', 'processing']"/>
                    <button name="action_reset_to_new" string="Reset to New" type="object" invisible="status not in ['completed_ok', 'error']"/>
                    <field name="status" widget="statusbar" statusbar_visible="new,processing,completed_ok,error"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="betasktype_id"/>
                            <field name="automatic_sync"/>
                            <field name="lastrun"/>
                        </group>
                        <group>
                            <field name="status"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Data">
                            <group>
                                <field name="data" widget="text"/>
                                <field name="data2" widget="text"/>
                            </group>
                        </page>
                        <page string="Error Information" invisible="not error_description">
                            <field name="error_description" widget="text" placeholder="No errors recorded"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_betask_task_kanban" model="ir.ui.view">
        <field name="name">myschool.betask.task.kanban</field>
        <field name="model">myschool.betask.task</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="status">
                <field name="betasktype_id"/>
                <field name="status"/>
                <field name="status_color"/>
                <field name="automatic_sync"/>
                <field name="lastrun"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.status_color.raw_value)} oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_content">
                                <div class="o_kanban_record_title">
                                    <field name="betasktype_id"/>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="automatic_sync" widget="boolean_toggle"/>
                                    <span class="badge text-bg-secondary" t-if="record.lastrun.raw_value">
                                        Last: <field name="lastrun" widget="relative"/>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_betask_task_search" model="ir.ui.view">
        <field name="name">myschool.betask.task.search</field>
        <field name="model">myschool.betask.task</field>
        <field name="arch" type="xml">
            <search string="Tasks">
                <field name="betasktype_id"/>
                <field name="data"/>
                <field name="data2"/>
                <field name="error_description"/>
                <separator/>
                <filter string="New" name="filter_new" domain="[('status', '=', 'new')]"/>
                <filter string="Processing" name="filter_processing" domain="[('status', '=', 'processing')]"/>
                <filter string="Completed" name="filter_completed" domain="[('status', '=', 'completed_ok')]"/>
                <filter string="Error" name="filter_error" domain="[('status', '=', 'error')]"/>
                <separator/>
                <filter string="Automatic Sync" name="filter_auto_sync" domain="[('automatic_sync', '=', True)]"/>
                <filter string="Manual Sync" name="filter_manual_sync" domain="[('automatic_sync', '=', False)]"/>
                <separator/>
                <filter string="Last 7 Days" name="filter_last_week" domain="[('lastrun', '&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <filter string="Last 30 Days" name="filter_last_month" domain="[('lastrun', '&gt;=', (context_today() - datetime.timedelta(days=30)).strftime('%Y-%m-%d'))]"/>
<!--                <group expand="0" string="Group By">-->
<!--                    <filter string="Task Type" name="group_type" context="{'group_by': 'betasktype_id'}"/>-->
<!--                    <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>-->
<!--                    <filter string="Automatic Sync" name="group_auto" context="{'group_by': 'automatic_sync'}"/>-->
<!--                    <filter string="Last Run Date" name="group_lastrun" context="{'group_by': 'lastrun:month'}"/>-->
<!--                </group>-->
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_betask_task" model="ir.actions.act_window">
        <field name="name">Tasks</field>
        <field name="res_model">myschool.betask.task</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{'search_default_filter_new': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Task
            </p>
            <p>
                Manage synchronization tasks between different systems and track their execution status.
            </p>
        </field>
    </record>

</odoo>