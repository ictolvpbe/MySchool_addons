<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Organization Tree View -->
    <record id="view_school_org_tree" model="ir.ui.view">
        <field name="name">school.org.tree</field>
        <field name="model">school.org</field>
        <field name="arch" type="xml">
            <tree string="Organisaties">
                <field name="name"/>
                <field name="name_short"/>
                <field name="inst_nr"/>
                <field name="org_type_id"/>
                <field name="is_active"/>
            </tree>
        </field>
    </record>

    <!-- Organization Form View -->
    <record id="view_school_org_form" model="ir.ui.view">
        <field name="name">school.org.form</field>
        <field name="model">school.org</field>
        <field name="arch" type="xml">
            <form string="Organisatie">
                <sheet>
                    <div class="oe_button_box" name="button_box"/>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="name_short"/>
                            <field name="inst_nr"/>
                            <field name="org_type_id"/>
                            <field name="is_active"/>
                        </group>
                        <group>
                            <field name="is_administrative"/>
                            <field name="orggroup_working_period"/>
                            <field name="richting"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Adres" name="address">
                            <group>
                                <group>
                                    <field name="street"/>
                                    <field name="street_nr"/>
                                </group>
                                <group>
                                    <field name="postal_code"/>
                                    <field name="community"/>
                                    <field name="country"/>
                                </group>
                            </group>
                        </page>

                        <page string="SAP &amp; Accounts" name="sap">
                            <group>
                                <group>
                                    <field name="sap_provider"/>
                                    <field name="sap_login"/>
                                    <field name="sap_password" password="True"/>
                                </group>
                            </group>
                        </page>

                        <page string="AD/OU Configuratie" name="ad_ou">
                            <group>
                                <group string="Domeinen">
                                    <field name="domain_internal"/>
                                    <field name="domain_external"/>
                                </group>
                                <group string="Opties">
                                    <field name="has_ou"/>
                                    <field name="has_comgroup"/>
                                    <field name="has_secgroup"/>
                                </group>
                            </group>
                            <group>
                                <group string="OU FQDN">
                                    <field name="ou_fqdn_internal"/>
                                    <field name="ou_fqdn_external"/>
                                </group>
                                <group string="Communicatiegroep">
                                    <field name="com_group_name"/>
                                    <field name="com_group_fqdn_internal"/>
                                    <field name="com_group_fqdn_external"/>
                                </group>
                            </group>
                            <group>
                                <group string="Securitygroep">
                                    <field name="sec_group_name"/>
                                    <field name="sec_group_fqdn_internal"/>
                                    <field name="sec_group_fqdn_external"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Organization Search View -->
    <record id="view_school_org_search" model="ir.ui.view">
        <field name="name">school.org.search</field>
        <field name="model">school.org</field>
        <field name="arch" type="xml">
            <search string="Zoek Organisaties">
                <field name="name"/>
                <field name="name_short"/>
                <field name="inst_nr"/>
                <field name="org_type_id"/>
                <filter string="Actief" name="active" domain="[('is_active', '=', True)]"/>
                <filter string="Inactief" name="inactive" domain="[('is_active', '=', False)]"/>
                <group expand="0" string="Groepeer op">
                    <filter string="Type" name="group_type" context="{'group_by': 'org_type_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Organization Action -->
    <record id="action_school_org" model="ir.actions.act_window">
        <field name="name">Organisaties</field>
        <field name="res_model">school.org</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Maak een nieuwe organisatie aan
            </p>
        </field>
    </record>
</odoo>