<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ========================================= -->
    <!-- BACKEND TASK TYPE VIEWS -->
    <!-- ========================================= -->

    <!-- List View -->
    <record id="view_betask_type_list" model="ir.ui.view">
        <field name="name">myschool.betask.type.list</field>
        <field name="model">myschool.betask.type</field>
        <field name="arch" type="xml">
            <list string="Task Types" decoration-muted="not active">
                <field name="name"/>
                <field name="target" widget="badge"/>
                <field name="object" widget="badge"/>
                <field name="action" widget="badge"/>
                <field name="auto_process" widget="boolean_toggle"/>
                <field name="priority"/>
                <field name="pending_task_count" string="Pending" decoration-warning="pending_task_count > 0"/>
                <field name="error_task_count" string="Errors" decoration-danger="error_task_count > 0"/>
                <field name="task_count" string="Total"/>
                <field name="active" column_invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_betask_type_form" model="ir.ui.view">
        <field name="name">myschool.betask.type.form</field>
        <field name="model">myschool.betask.type</field>
        <field name="arch" type="xml">
            <form string="Task Type">
                <header>
                    <button name="action_process_tasks" 
                            string="Process Pending Tasks" 
                            type="object" 
                            class="oe_highlight"
                            invisible="pending_task_count == 0"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_tasks"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-tasks">
                            <field name="task_count" widget="statinfo" string="Total Tasks"/>
                        </button>
                        <button name="action_view_pending_tasks"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-clock-o"
                                invisible="pending_task_count == 0">
                            <field name="pending_task_count" widget="statinfo" string="Pending"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Task Type Name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Task Definition">
                            <field name="target"/>
                            <field name="object"/>
                            <field name="action"/>
                        </group>
                        <group string="Processing Configuration">
                            <field name="auto_process" widget="boolean_toggle"/>
                            <field name="requires_confirmation"/>
                            <field name="priority"/>
                            <field name="processor_method"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Describe what this task type does..."/>
                        </page>
                        <page string="Tasks" name="tasks">
                            <field name="task_ids" readonly="1">
                                <list decoration-danger="status == 'error'" 
                                      decoration-success="status == 'completed_ok'" 
                                      decoration-info="status == 'processing'">
                                    <field name="name"/>
                                    <field name="status" widget="badge" 
                                           decoration-success="status == 'completed_ok'" 
                                           decoration-info="status == 'processing'" 
                                           decoration-danger="status == 'error'" 
                                           decoration-muted="status == 'new'"/>
                                    <field name="automatic_sync" widget="boolean_toggle"/>
                                    <field name="create_date"/>
                                    <field name="lastrun"/>
                                </list>
                            </field>
                        </page>
                        <page string="Statistics" name="statistics">
                            <group>
                                <group>
                                    <field name="task_count"/>
                                    <field name="pending_task_count"/>
                                </group>
                                <group>
                                    <field name="error_task_count"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_betask_type_search" model="ir.ui.view">
        <field name="name">myschool.betask.type.search</field>
        <field name="model">myschool.betask.type</field>
        <field name="arch" type="xml">
            <search string="Search Task Types">
                <field name="name"/>
                <field name="target"/>
                <field name="object"/>
                <field name="action"/>
                <separator/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Auto Process" name="auto_process" domain="[('auto_process', '=', True)]"/>
                <filter string="Manual Only" name="manual" domain="[('auto_process', '=', False)]"/>
                <separator/>
                <filter string="Has Pending" name="has_pending" domain="[('task_ids.status', '=', 'new')]"/>
                <filter string="Has Errors" name="has_errors" domain="[('task_ids.status', '=', 'error')]"/>
                <separator/>
                <!-- Target filters -->
                <filter string="Database" name="target_db" domain="[('target', '=', 'DB')]"/>
                <filter string="LDAP" name="target_ldap" domain="[('target', '=', 'LDAP')]"/>
                <filter string="All Systems" name="target_all" domain="[('target', '=', 'ALL')]"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_betask_type" model="ir.actions.act_window">
        <field name="name">Task Types</field>
        <field name="res_model">myschool.betask.type</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Task Type
            </p>
            <p>
                Task types define the target system, object, and action for backend tasks.
                Examples: DB_ORG_ADD, LDAP_EMPLOYEE_UPDATE
            </p>
        </field>
    </record>

</odoo>
