<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- PropRelation Type Tree View -->
    <record id="view_school_proprelation_type_tree" model="ir.ui.view">
        <field name="name">school.proprelation.type.tree</field>
        <field name="model">school.proprelation.type</field>
        <field name="arch" type="xml">
            <tree string="Relatie Types">
                <field name="name"/>
                <field name="usage"/>
                <field name="is_active"/>
            </tree>
        </field>
    </record>

    <!-- PropRelation Type Form View -->
    <record id="view_school_proprelation_type_form" model="ir.ui.view">
        <field name="name">school.proprelation.type.form</field>
        <field name="model">school.proprelation.type</field>
        <field name="arch" type="xml">
            <form string="Relatie Type">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="usage"/>
                        <field name="is_active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- PropRelation Type Action -->
    <record id="action_school_proprelation_type" model="ir.actions.act_window">
        <field name="name">Relatie Types</field>
        <field name="res_model">school.proprelation.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Maak een nieuw relatie type aan
            </p>
        </field>
    </record>
</odoo>