<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Role Tree View -->
    <record id="view_school_role_tree" model="ir.ui.view">
        <field name="name">school.role.tree</field>
        <field name="model">school.role</field>
        <field name="arch" type="xml">
            <tree string="Rollen">
                <field name="name"/>
                <field name="short_name"/>
                <field name="priority"/>
                <field name="role_type_id"/>
                <field name="is_active"/>
            </tree>
        </field>
    </record>

    <!-- Role Form View -->
    <record id="view_school_role_form" model="ir.ui.view">
        <field name="name">school.role.form</field>
        <field name="model">school.role</field>
        <field name="arch" type="xml">
            <form string="Rol">
                <sheet>
                    <div class="oe_button_box" name="button_box"/>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="short_name"/>
                            <field name="priority"/>
                        </group>
                        <group>
                            <field name="role_type_id"/>
                            <field name="is_active"/>
                        </group>
                    </group>

                    <group string="Toegangsrechten &amp; Opties">
                        <group>
                            <field name="has_ui_access"/>
                            <field name="has_group"/>
                        </group>
                        <group>
                            <field name="has_accounts"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Role Search View -->
    <record id="view_school_role_search" model="ir.ui.view">
        <field name="name">school.role.search</field>
        <field name="model">school.role</field>
        <field name="arch" type="xml">
            <search string="Zoek Rollen">
                <field name="name"/>
                <field name="short_name"/>
                <field name="role_type_id"/>
                <filter string="Actief" name="active" domain="[('is_active', '=', True)]"/>
                <filter string="Inactief" name="inactive" domain="[('is_active', '=', False)]"/>
                <filter string="Met UI Toegang" name="has_ui" domain="[('has_ui_access', '=', True)]"/>
                <group expand="0" string="Groepeer op">
                    <filter string="Type" name="group_type" context="{'group_by': 'role_type_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Role Action -->
    <record id="action_school_role" model="ir.actions.act_window">
        <field name="name">Rollen</field>
        <field name="res_model">school.role</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Maak een nieuwe rol aan
            </p>
        </field>
    </record>
</odoo>