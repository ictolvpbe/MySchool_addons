# Voorbeeld: Importeer een service uit de core module
from odoo import models
from mijnapp_core.services.person_service import PersonService

class SomeUIClass(models.Model):
    _name = 'mijnapp_ui.something'

    def call_core_service(self):
        # Gebruik code die in de core module is gedefinieerd
        PersonService.get_all_persons_data(self.env)
