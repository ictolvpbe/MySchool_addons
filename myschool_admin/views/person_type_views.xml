<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Person Type list View -->
    <record id="view_myschool_person_type_list" model="ir.ui.view">
        <field name="name">myschool.person.type.list</field>
        <field name="model">myschool.person.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="is_active"/>
            </list>
        </field>
    </record>

    <!-- Person Type Form View -->
    <record id="view_myschool_person_type_form" model="ir.ui.view">
        <field name="name">myschool.person.type.form</field>
        <field name="model">myschool.person.type</field>
        <field name="arch" type="xml">
            <form string="Persoon Type">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="is_active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Person Type Action -->
    <record id="action_myschool_person_type" model="ir.actions.act_window">
        <field name="name">Persoon Types</field>
        <field name="res_model">myschool.person.type</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Maak een nieuw persoon type aan
            </p>
        </field>
    </record>
</odoo>