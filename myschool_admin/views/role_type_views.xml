<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- ===================================================================== -->
    <!-- RoleType Views                                                        -->
    <!-- ===================================================================== -->
    
    <!-- RoleType Form View -->
    <record id="view_role_type_form" model="ir.ui.view">
        <field name="name">myschool.role.type.form</field>
        <field name="model">myschool.role.type</field>
        <field name="arch" type="xml">
            <form string="Role Type">
                <sheet>
                    <widget name="web_ribbon" title="Inactive" bg_color="danger"
                            invisible="is_active"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Role Type Name"/>
                        </h1>
                        <h3>
                            <field name="shortname" placeholder="Short Name"/>
                        </h3>
                    </div>
                    
                    <group>
                        <group string="Status">
                            <field name="is_active"/>
                            <field name="role_count"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Describe this role type..."/>
                        </page>
                        <page string="Roles" name="roles">
                            <field name="role_ids" readonly="1">
                                <list string="Roles">
                                    <field name="name"/>
                                    <field name="shortname"/>
                                    <field name="priority"/>
                                    <field name="has_ui_access"/>
                                    <field name="has_group"/>
                                    <field name="has_accounts"/>
                                    <field name="is_active"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- RoleType List View -->
    <record id="view_role_type_list" model="ir.ui.view">
        <field name="name">myschool.role.type.list</field>
        <field name="model">myschool.role.type</field>
        <field name="arch" type="xml">
            <list string="Role Types" multi_edit="1"
                  decoration-muted="not is_active">
                <field name="name"/>
                <field name="shortname"/>
                <field name="role_count"/>
                <field name="is_active"/>
            </list>
        </field>
    </record>
    
    <!-- RoleType Search View -->
    <record id="view_role_type_search" model="ir.ui.view">
        <field name="name">myschool.role.type.search</field>
        <field name="model">myschool.role.type</field>
        <field name="arch" type="xml">
            <search string="Search Role Types">
                <field name="name"/>
                <field name="shortname"/>
                <separator/>
                <filter string="Active" name="active" domain="[('is_active', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('is_active', '=', False)]"/>
                <separator/>
                <filter string="Has Roles" name="has_roles" domain="[('role_count', '>', 0)]"/>
            </search>
        </field>
    </record>
    
    <!-- RoleType Action -->
    <record id="action_myschool_role_type" model="ir.actions.act_window">
        <field name="name">Role Types</field>
        <field name="res_model">myschool.role.type</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_role_type_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Role Type
            </p>
            <p>
                Role types categorize roles into groups such as BACKEND, SAP, UI.
            </p>
        </field>
    </record>
    
</odoo>
