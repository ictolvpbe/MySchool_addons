    <!-- Actie voor eigen nascholingsaanvragen (met domain-filter) -->
    <record id="action_nascholing_aanvraag_mijnaanvragen" model="ir.actions.act_window">
        <field name="name">Mijn Nascholingsaanvragen</field>
        <field name="res_model">nascholing.aanvraag</field>
        <field name="view_mode">list,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'list', 'view_id': ref('view_nascholing_aanvraag_list')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_nascholing_aanvraag_user_form')}),
            (0, 0, {'view_mode': 'kanban'})]"/>

        <field name="domain">[('teacher_id.user_id', '=', uid)]</field>
    </record>

    <!-- Actie voor goed te keuren nascholingsaanvragen (met domain-filter) -->
    <record id="action_nascholing_aanvraag_beheer" model="ir.actions.act_window">
        <field name="name">Goed te keuren Nascholingsaanvragen</field>
        <field name="res_model">nascholing.aanvraag</field>
        <field name="view_mode">list,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'list', 'view_id': ref('view_nascholing_aanvraag_admin_list')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_nascholing_aanvraag_admin_form')}),
            (0, 0, {'view_mode': 'kanban'})]"/>

        <field name="domain">[('state', '=', 'submitted')]</field>
        <field name="context">{'search_default_order_by_date': 1}</field>
    </record>

